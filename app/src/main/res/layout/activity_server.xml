<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/server"
    tools:context=".Server"
    android:background="@drawable/pic5">


    <TextView
        android:id="@+id/signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="FLOOD REPORT"
        android:textColor="#100F0F"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/location"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="134dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="10dp"
        android:background="#673AB7"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="20dp"
        android:hint=" Location"
        android:padding="20dp"
        android:textColor="@color/white"

        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="235dp"
        android:layout_marginEnd="34dp"
        android:background="#673AB7"
        android:drawableLeft="@drawable/baseline_info_24"
        android:drawablePadding="20dp"
        android:hint=" Description"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="33dp"
        android:layout_marginTop="337dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="#673AB7"
        android:drawableLeft="@drawable/baseline_location_searching_24"
        android:drawablePadding="20dp"
        android:hint="Latitud"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/lng"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lat"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="37dp"
        android:layout_marginBottom="10dp"
        android:background="#673AB7"
        android:drawableLeft="@drawable/baseline_my_location_24"
        android:drawablePadding="20dp"
        android:hint="Longitud"
        android:inputType="textPersonName"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <Button
        android:id="@+id/submitbtn"
        android:layout_width="164dp"
        android:layout_height="92dp"
        android:layout_below="@id/lng"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_btn"
        android:fontFamily="sans-serif-smallcaps"
        android:text="SUBMIT"
        android:textStyle="bold"
        app:backgroundTint="#131313" />


</RelativeLayout>