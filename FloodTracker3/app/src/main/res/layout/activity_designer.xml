<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/news"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgnews"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RelativeLayout>


    </RelativeLayout>


    <TextView
        android:id="@+id/textView_title"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="111dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="18dp"
        android:fontFamily="serif"
        android:foregroundGravity="center"
        android:text="Floods News"
        android:textColor="#74C34A"
        android:textSize="24sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/slide"
        android:layout_width="329dp"
        android:layout_height="256dp"
        android:layout_below="@id/textView_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-47dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="10dip"
        android:layout_marginBottom="153dp"
        android:src="@drawable/news1"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/tanahdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="450dp"
        android:fontFamily="serif"
        android:text="Kuala Krai, Malaysia: At least five people were killed and over 70,000 rushed to evacuation centres in Malaysia after monsoon-triggered floods inundated the country's north, authorities said Wednesday. Over 31,000 people have fled their homes in Kelantan state while more than 39,000 residents have been evacuated to temporary shelters in neighbouring Terengganu after flooding began over the weekend, the official Bernama news agency said. Emergency services officials said a total of five people have died. "
        android:textAlignment="center"
        android:textColor="#151414"
        android:textSize="10sp"
        android:textStyle="bold"
        tools:ignore="NotSibling" />


</RelativeLayout>